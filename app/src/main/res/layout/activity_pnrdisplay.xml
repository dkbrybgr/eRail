<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/icon_bg_app"
    >
    <include android:id="@+id/app_bar_inc" layout="@layout/app_bar"></include>

    <TextView
        android:id="@+id/journeyDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_bar_inc"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:background="@color/primaryColor"
        android:text="Journey Detail"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        />
    <TextView
        android:id="@+id/centerLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/reservedUptoTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toTxt"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/centerLayout"
        android:layout_marginLeft="5dp"
        android:textSize="18sp"
        android:textColor="#fff"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/trainNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/journeyDetail"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:layout_marginLeft="3dp"
        android:textSize="18sp"
        android:textColor="#fff"
        android:text="Train Number"/>

    <TextView
        android:id="@+id/trainNoTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/journeyDetail"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/centerLayout"
        android:layout_marginLeft="3dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#fff"
        />
    <TextView
        android:id="@+id/trainName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/trainNo"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="3dp"
        android:textSize="18sp"
        android:textColor="#fff"
        android:textStyle="bold"
        android:text="Train Name"/>
    <TextView
        android:id="@+id/trainNameTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/trainNoTxt"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/centerLayout"
        android:layout_marginLeft="3dp"
        android:textSize="18sp"
        android:textColor="#fff"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/boardingDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/trainName"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="3dp"
        android:textSize="18sp"
        android:textColor="#fff"
        android:textStyle="bold"
        android:text="Boarding Date"/>
    <TextView
        android:id="@+id/boardingDateTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/trainNameTxt"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/centerLayout"
        android:layout_marginLeft="3dp"
        android:textSize="18sp"
        android:textColor="#fff"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/boardingDate"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="3dp"
        android:textSize="18sp"
        android:textColor="#fff"
        android:textStyle="bold"
        android:text="From"/>
    <TextView
        android:id="@+id/fromTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/boardingDateTxt"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/centerLayout"
        android:layout_marginLeft="3dp"
        android:textSize="18sp"
        android:textColor="#fff"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/from"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="3dp"
        android:textSize="18sp"
        android:textColor="#fff"
        android:textStyle="bold"
        android:text="To"/>
    <TextView
        android:id="@+id/toTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fromTxt"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/centerLayout"
        android:layout_marginLeft="3dp"
        android:textSize="18sp"
        android:textColor="#fff"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/reservedUpto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/to"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="3dp"
        android:textSize="18sp"
        android:textColor="#fff"
        android:textStyle="bold"
        android:text="Reserved Upto"/>

    <TextView
        android:id="@+id/boardingPoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reservedUpto"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="3dp"
        android:textSize="18sp"
        android:textColor="#fff"
        android:textStyle="bold"
        android:text="Boarding Point"/>
    <TextView
        android:id="@+id/boardingPointTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reservedUptoTxt"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/centerLayout"
        android:layout_marginLeft="3dp"
        android:textSize="18sp"
        android:textColor="#fff"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/class1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/boardingPoint"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="3dp"
        android:textSize="18sp"
        android:textColor="#fff"
        android:textStyle="bold"
        android:text="Class"/>
    <TextView
        android:id="@+id/class1Txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/boardingPointTxt"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/centerLayout"
        android:layout_marginLeft="3dp"
        android:textSize="18sp"
        android:textColor="#fff"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/passengerInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:textColor="#FFFFFF"
        android:background="@color/primaryColor"
        android:text="Passenger Info"
        android:layout_below="@id/class1"
        android:layout_marginTop="5dp"

        />
    <TextView
        android:id="@+id/chartPrepTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginLeft="3dp"
        android:layout_below="@id/passengerInfo"
        android:textStyle="italic|bold"
        android:textColor="#fff"
        />
    <ListView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/pnrStatusList"
        android:layout_below="@id/chartPrepTxt"
        android:background="@android:color/transparent"
        android:alpha="0.75"
        android:layout_marginTop="2dp"
        android:dividerHeight="5px"
        android:layout_marginRight="5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>